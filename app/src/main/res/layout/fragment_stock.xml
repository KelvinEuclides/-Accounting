<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="389dp"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <TextView
                android:id="@+id/tv_id_preco"
                android:layout_width="176dp"
                android:layout_height="19dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="00MZN"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_id_itensDisp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:id="@+id/tv_id_descricao"
                android:layout_width="350dp"
                android:layout_height="17dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Descriçao Item"
                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_id_items"
                android:layout_width="66dp"
                android:layout_height="17dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_id_itensDisp"
                android:layout_width="83dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:text="0"
                app:layout_constraintStart_toEndOf="@+id/tv_id_items"
                tools:layout_editor_absoluteY="51dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="345dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="27dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_weight="1"
                    android:text="Itens"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="27dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="53dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:text="Itens_Disponiveis"
                    android:textColor="@color/primary_text"
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="48dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="149dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:text="Preço"
                    android:textColor="@color/primary_text"
                    tools:layout_editor_absoluteX="222dp"
                    tools:layout_editor_absoluteY="53dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
