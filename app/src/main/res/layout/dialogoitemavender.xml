<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="24dp"
        android:text="Nome "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_vender_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/textView14"
        android:text="aaaa" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="15dp"
        android:text="Preco"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_vender_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView51"
        android:layout_alignBottom="@+id/textView51"
        android:layout_toEndOf="@+id/textView14"
        android:text="00mzn" />

    <TextView
        android:id="@+id/quantidade_txto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView56"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/et_vender_nome"
        android:text="Qtd:0"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView51"
        android:layout_below="@+id/textView51"
        android:layout_marginTop="22dp"
        android:text="Quantidade de itens que deseja vender"
        android:id="@+id/textView56" />

    <EditText
        android:id="@+id/et_vender_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView56"
        android:layout_below="@+id/textView56"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/bt_adicionar_item_va"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_vender_quantidade"
        android:layout_marginTop="21dp"
        android:background="@color/colorPrimary"
        android:text="Adicionar"
        android:textColor="@color/icons" />

</RelativeLayout>
